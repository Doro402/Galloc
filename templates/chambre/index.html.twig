{% extends 'base.html.twig' %}

{% block title %}Hello ChambreController!{% endblock %}

{% block centre %}

<h1 class="text-center mt-3" >Liste des Chambres !
	</h1>
    <a href="{{ path('chambre_new') }}" class="btn btn-primary">Creer Nouveau ! </a>
	<table class="table table-bordered ">
		<thead class=" thead-light">
			<tr>
				<th>Id</th>
				<th>numero</th>
                <th>Type</th>
                <th> Actions</th>
			</tr>
		</thead>

		{% for chambre in chambres %}
			<tr>
				<td>{{  chambre.id }}</td>
				<td>{{ chambre.numero }}</td>
                <td>{{ chambre.type }}</td>
                <td>
                <a href="{{ path('chambre_edit', {'id': chambre.id}) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
		{% else %}
            <tr>
                <td colspan="5">Pas de Départements</td>
            </tr>
		{% endfor %}

	</table>
  <div class="navigation d-flex justify-content-center">
              {{ knp_pagination_render(chambres) }}
             </div>

